<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="onetooneSQL">
	<!-- 1:1 문의 작성 -->
	<insert id="register">
		insert into tbl_onetoone(seq
								,userId
								,type
								,orderCode
								,email
								,tel1
								,tel2
								,tel3
								,subject
								,contents
								,ref
								,lev
								,step
								,pseq
								,reply
								,logdate)
						values(onetoone_seq.nextval
							 ,#{type}
							 ,#{userId}
							 ,#{orderCode}
							 ,#{email}
							 ,#{tel1}
							 ,#{tel2}
							 ,#{tel3}
							 ,#{subject}
							 ,#{contents}
							 ,#{ref}
							 ,#{lev}
							 ,#{step}
							 ,#{pseq}
							 ,#{reply}
							 ,sysdate)
	</insert>
	
	<!-- 1:1 문의 리스트 -->
	<select id="onetooneList" parameterType="String" resultType="onetoone">
		select * from tbl_onetoone where userId = #{userId}
	</select>
</mapper>